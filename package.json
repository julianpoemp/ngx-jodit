{
  "name": "jodit",
  "version": "0.0.0",
  "scripts": {
    "ng": "nx",
    "postinstall": "node ./decorate-angular-cli.js && ngcc --properties es2015 browser module main",
    "start": "nx serve demo",
    "start:pro": "nx serve demo-pro",
    "build": "nx build",
    "build:lib": "nx build ngx-jodit && cp -f ./README.md ./dist/libs/ngx-jodit/README.md && cp libs/ngx-jodit/LICENSE ./dist/libs/ngx-jodit/LICENSE",
    "release:lib": "nx run ngx-jodit:version --releaseAs=patch --push",
    "publish:lib": "nx npm ngx-jodit --tag=1x",
    "release:lib:pro": "nx run ngx-jodit-pro:version --releaseAs=patch --push",
    "publish:lib:pro": "nx npm ngx-jodit-pro --tag x1",
    "build:lib:pro": "nx build ngx-jodit-pro",
    "build:docs": "nx build demo && mv -f ./dist/apps/demo/* ./docs",
    "test": "nx test"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~13.3.0",
    "@angular/common": "~13.3.0",
    "@angular/compiler": "~13.3.0",
    "@angular/core": "~13.3.0",
    "@angular/forms": "~13.3.0",
    "@angular/platform-browser": "~13.3.0",
    "@angular/platform-browser-dynamic": "~13.3.0",
    "@angular/router": "~13.3.0",
    "@nrwl/angular": "13.10.6",
    "bootstrap": "^5.2.2",
    "bootstrap-icons": "^1.9.1",
    "jodit": "^3.24.2",
    "jodit-pro": "^1.3.40",
    "rxjs": "~7.4.0",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.3.0",
    "@angular-devkit/architect": "0.1303.11",
    "@angular-devkit/core": "~13.3.0",
    "@angular-eslint/eslint-plugin": "~13.1.0",
    "@angular-eslint/eslint-plugin-template": "~13.1.0",
    "@angular-eslint/template-parser": "~13.1.0",
    "@angular/cli": "~13.3.0",
    "@angular/compiler-cli": "~13.3.0",
    "@angular/language-service": "~13.3.0",
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-angular": "^16.2.1",
    "@jscutlery/semver": "2.22.0",
    "@nrwl/cli": "13.10.6",
    "@nrwl/cypress": "13.10.6",
    "@nrwl/eslint-plugin-nx": "13.10.6",
    "@nrwl/jest": "13.10.6",
    "@nrwl/linter": "13.10.6",
    "@nrwl/node": "13.10.6",
    "@nrwl/workspace": "13.10.6",
    "@types/jest": "27.0.2",
    "@types/node": "16.11.7",
    "@typescript-eslint/eslint-plugin": "~5.18.0",
    "@typescript-eslint/parser": "~5.18.0",
    "cypress": "^9.1.0",
    "eslint": "~8.12.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-cypress": "^2.10.3",
    "husky": "^7.0.4",
    "jest": "27.2.3",
    "jest-preset-angular": "11.1.1",
    "ng-packagr": "^13.0.0",
    "ngx-deploy-npm": "2.1.0",
    "nx": "13.10.6",
    "postcss": "^8.4.5",
    "postcss-import": "^14.0.2",
